<!DOCTYPE html>
<html lang="en" x-data="{ sidebarOpen: false }">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard - HUPVPNSPEED</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <style>
    body{background:#0d1117;color:#c9d1d9;font-family:'Montserrat',sans-serif}
  </style>
</head>
<body class="flex flex-col min-h-screen">
  <!-- NAVBAR -->
  <nav class="bg-gray-800 fixed w-full z-10">
    <div class="px-4 flex justify-between items-center h-16">
      <button @click="sidebarOpen = !sidebarOpen" class="lg:hidden text-gray-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </button>
      <span class="text-xl font-bold text-blue-400">HUPVPNSPEED</span>
      <div class="flex items-center space-x-4">
        <div class="flex items-center bg-indigo-50 rounded-full px-3 py-1">
          <span class="text-xs text-indigo-700">Saldo: Rp <span id="balance">0</span></span>
        </div>
        <a href="/logout" class="text-gray-300 hover:text-white">Logout</a>
      </div>
    </div>
  </nav>

  <!-- SIDEBAR -->
  <aside x-show="sidebarOpen" @click.away="sidebarOpen=false"
         class="fixed inset-y-0 left-0 z-30 w-64 bg-gray-900 p-4 space-y-4 lg:relative lg:flex lg:flex-shrink-0 lg:w-64 lg:pt-16">
    <a href="/dashboard" class="block px-3 py-2 rounded hover:bg-gray-700">Dashboard</a>
    <!-- BILLING -->
    <h3 class="text-xs uppercase text-gray-500">Billing</h3>
    <a href="/topup" class="block px-3 py-2 rounded hover:bg-gray-700">Topup Saldo</a>
    <a href="/riwayat-topup" class="block px-3 py-2 rounded hover:bg-gray-700">Riwayat Topup</a>
    <!-- VPN MENU -->
    <h3 class="text-xs uppercase text-gray-500">VPN Menu</h3>
    <a href="/create-ssh" class="block px-3 py-2 rounded hover:bg-gray-700">SSH</a>
    <a href="/create-vmess" class="block px-3 py-2 rounded hover:bg-gray-700">VMess</a>
    <a href="/create-vless" class="block px-3 py-2 rounded hover:bg-gray-700">VLESS</a>
    <a href="/create-trojan" class="block px-3 py-2 rounded hover:bg-gray-700">Trojan</a>
    <a href="/ranking" class="block px-3 py-2 rounded hover:bg-gray-700">Ranking</a>
    <a href="/laporan" class="block px-3 py-2 rounded hover:bg-gray-700">Laporan</a>
  </aside>

  <!-- MAIN -->
  <main class="flex-1 pt-16 p-4 lg:ml-64">
    <!-- Profile Card -->
    <div class="bg-gray-800 rounded-xl shadow-md overflow-hidden p-4 mb-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 mr-3"><i class="fas fa-user"></i></div>
          <div>
            <p class="text-sm text-gray-400">Nama</p>
            <p class="font-bold" id="username">User</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-sm text-gray-400">Role</p>
          <span id="role" class="text-yellow-400">MEMBER</span>
        </div>
      </div>
    </div>

    <!-- Promo & Navigation -->
    <div class="grid md:grid-cols-2 gap-4">
      <!-- Promo 15% -->
      <div class="bg-yellow-900/30 border border-yellow-700 rounded-lg p-4">
        <h4 class="font-semibold flex items-center"><i class="fas fa-gift mr-2"></i>Bonus Topup 15%</h4>
        <p class="text-xs mt-1">Isi saldo sekarang & dapat bonus 15% setiap topup!</p>
      </div>
      <!-- Upgrade Reseller -->
      <div class="bg-purple-900/30 border border-purple-700 rounded-lg p-4">
        <h4 class="font-semibold flex items-center"><i class="fas fa-crown mr-2"></i>Upgrade Reseller</h4>
        <p class="text-xs mt-1">Diskon 40% & prioritas support!</p>
        <a href="/upgrade" class="mt-2 inline-block text-sm bg-purple-600 px-3 py-1 rounded">Upgrade Sekarang</a>
      </div>
    </div>
  </main>
  <script>
  // Saldo & nama (ambil dari session)
  document.getElementById('balance').innerText = '0';
  document.getElementById('username').innerText = 'Farhan Maulana';
  </script>
</body>
</html>
